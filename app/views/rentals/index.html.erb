<p style="color: green"><%= notice %></p>

<%= month_calendar(starting_day: :sunday) do |date| %>
  <% @rentals.each do |rental| %>
    <% if rental.start_time.to_date <= date && rental.end_time.to_date >= date %>
      <div class="rental">
        <%= link_to rental.emoji, rental_path(rental) %>
      </div>
    <% end %>
  <% end %>
<% end %>